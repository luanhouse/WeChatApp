page {
    height: 100%;
    background-color: #b3d4db;
}

.containter {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user-avater {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-top: 160rpx;
}

.user-name {
    margin-top: 100rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.moto-containter {
    margin-top: 200rpx;
    border: 1px solid #405f80;
    border-radius: 5px;
    text-align: center;
    width: 200rpx;
    height: 80rpx;
}
.moto {
    font-size: 22rpx;
    font-weight: bold;
    color: #405f80;
    line-height: 80rpx;
}